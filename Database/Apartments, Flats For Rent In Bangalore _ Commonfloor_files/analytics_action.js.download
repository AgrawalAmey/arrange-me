var pushCft = function(gaParams){
    var category = gaParams[1] || "";
    var action = gaParams[2] || "";
    var label = gaParams[3] || "";
    var value = gaParams[4] || "";
    try{
        if(enable_universal_analytics == 1){
            if(value){
                ga('send', 'event', category, action, label, Math.ceil(value));
            }else{
                ga('send', 'event', category, action, label);
            }
        }else {
            if(value){
                _gaq.push(['_trackEvent', category, action, label, Math.ceil(value)]);
            }else{
                _gaq.push(['_trackEvent', category, action, label]);
            }
        }
    }catch(e){
        console.log(e);
    }
}
